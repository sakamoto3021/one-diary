<div class="row">
<% if user_signed_in? %>
  <h1>Tweet一覧</h1>
  <div class="col-sm-4">
    <div class="tweet-form">
      <%= form_with model: @tweet do |f| %>
        <%= f.text_area :content, placeholder: "ここからTweetしてみましょう！", class:'form-controll tweet-form', maxlength: '140' %>
        <%= f.submit '投稿する', class:'btn btn-block btn-primary'%>
      <% end %>
    </div>

    <div class="serch-form" style="background: red">
      <p>検索フォーム設置予定</p>
    </div>
  </div>
  <div id="preview">
    <%= render 'preview' %>
  </div>
  
  <div id="tweets" class="col-sm-8">
    <%= render 'tweets', tweets: @tweets %>
  </div>

  <% else %>

    <h1>トップページ</h1>
    <p>Twitterを日付ごとに保存</p>
    <p>日記のように読み返せるように</p>
  <% end %>
</div>
<script>
  $(document).ready(function() {
    $("textarea").keyup(function() {
      $(".preview-display > div").show();
      $("#main").html( $(this).val() );
    });
  });

  $(document).ready(function() {
    $(".preview-hide").click(function() {
      $(".preview-display > div").hide();
    });
  });

</script>
